<% if current_user.is_admin? %>
  <button type="button" class="btn btn-light w-100">
    <h3>クイズ一覧</h3>
    <h3><%= link_to 'クイズ新規登録', new_quiz_path, class: 'btn btn-primary'%></h4>
  
    <%= search_form_for @q, url: search_quizzes_path do |f| %>
      <div class="form-check">
        <%= f.radio_button :destination_eq, '' %>指定なし
      </div>
      <div class="form-check">
        <%= f.radio_button :destination_eq, 0 %>Asia
      </div>
      <div class="form-check">
        <%= f.radio_button :destination_eq, 1 %>Europe
      </div>
      <div class="form-check">
        <%= f.radio_button :destination_eq, 2 %>Oceania
      </div>
      <div class="form-check">
        <%= f.radio_button :destination_eq, 3 %>Americas
      </div>
      <div class="form-check">
        <%= f.radio_button :destination_eq, 4 %>Africa
      </div>
      <%= f.submit '方面別検索', class: "btn btn-success" %>
    <% end %>
  </button>

  <div class="pagination justify-content-center">
    <h4><%= paginate @quizzes %></h4>
  </div>
  
  <table class="table">
      <thead>
        <tr>
          <th scope="col">方面</th>
          <th scope="col">問題</th>
          <th scope="col">写真</th>
          <th scope="col">画像ファイル</th>
          <th scope="col">解答</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @quizzes.each do |quiz| %>
          <tr>
            <td><%= quiz.destination %></td>
            <td><%= quiz.question %></td>
            <td><%= image_tag quiz.image.variant(resize_to_limit: [200, 200]) if quiz.image.attached? %></td>
            <td><%= link_to quiz.image.filename, quiz.image if quiz.image.attached? %></td>
            <td><%= quiz.answer %></td>
            <td><%= link_to '詳細表示', quiz, class: 'btn btn-primary' %></td>
            <td><%= link_to '編集', edit_quiz_path(quiz), class: 'btn btn-primary' %></td>
            <td><%= link_to '削除', quiz, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>